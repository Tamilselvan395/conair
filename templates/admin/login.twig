<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="icon" type="image/png" sizes="32x32" href="{{ base_url }}/assets/images/favicon-32x32.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #f5f7fb;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }
        
        .login-card {
            background: white;
            border-radius: 24px;
            padding: 44px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            border: 1px solid #f0f0f0;
        }
        
        .brand {
            text-align: center;
            margin-bottom: 36px;
        }
        
        .brand i {
            font-size: 48px;
            color: #393186;
            margin-bottom: 16px;
            background: #f0eff7;
            padding: 18px;
            border-radius: 20px;
        }
        
        .brand h2 {
            color: #1e1e2f;
            font-size: 26px;
            font-weight: 700;
            letter-spacing: -0.5px;
        }
        
        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            padding: 14px 16px;
            border-radius: 14px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 28px;
            border: 1px solid #fecaca;
        }
        
        .form-group {
            margin-bottom: 22px;
        }
        
        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #393186;
            margin-bottom: 8px;
            letter-spacing: -0.2px;
        }
        
        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }
        
        .input-icon {
            position: absolute;
            left: 16px;
            color: #393186;
            font-size: 16px;
            z-index: 1;
            opacity: 0.7;
        }
        
        .input-field {
            width: 100%;
            padding: 15px 16px 15px 50px;
            border: 1.5px solid #edf2f7;
            border-radius: 14px;
            font-size: 15px;
            transition: all 0.2s;
            background: #fafbfc;
            color: #1e1e1e;
        }
        
        .input-field:focus {
            outline: none;
            border-color: #393186;
            background: white;
            box-shadow: 0 0 0 4px rgba(57,49,134,0.05);
        }
        
        .input-field::placeholder {
            color: #a0aec0;
            font-weight: 400;
        }
        
        .toggle-password {
            position: absolute;
            right: 16px;
            color: #393186;
            cursor: pointer;
            font-size: 16px;
            background: transparent;
            border: none;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: color 0.2s;
            z-index: 1;
            opacity: 0.7;
        }
        
        .toggle-password:hover {
            opacity: 1;
        }
        
        .btn-login {
            width: 100%;
            padding: 15px;
            background: #393186;
            color: white;
            border: none;
            border-radius: 14px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.2s;
            margin-top: 16px;
            letter-spacing: -0.3px;
        }
        
        .btn-login:hover {
            background: #2e2770;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px -8px rgba(57,49,134,0.3);
        }
        
        .footer {
            margin-top: 32px;
            text-align: center;
            padding-top: 24px;
            border-top: 1px solid #edf2f7;
        }
        
        .footer a {
            color: #64748b;
            font-size: 14px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: color 0.2s;
            font-weight: 500;
        }
        
        .footer a:hover {
            color: #393186;
        }
        
        .footer a i {
            font-size: 12px;
        }
        
        input:-webkit-autofill,
        input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 100px #fafbfc inset;
            -webkit-text-fill-color: #1e1e1e;
            border-color: #edf2f7;
        }
    </style>
</head>
<body>

<div class="login-card">
    <div class="brand">
        <i class="fas fa-crown"></i>
        <h2>Admin Login</h2>
    </div>
    
    {% if error %}
    <div class="alert-error">
        <i class="fas fa-exclamation-circle"></i>
        {{ error }}
    </div>
    {% endif %}
    
    <form method="POST" action="{{ base_url }}/admin/login">
        <div class="form-group">
            <label>Username</label>
            <div class="input-wrapper">
                <i class="fas fa-user input-icon"></i>
                <input type="text" name="username" class="input-field" placeholder="Enter username" required autofocus>
            </div>
        </div>
        
        <div class="form-group">
            <label>Password</label>
            <div class="input-wrapper">
                <i class="fas fa-lock input-icon"></i>
                <input type="password" name="password" id="password" class="input-field" placeholder="Enter password" required>
                <button type="button" class="toggle-password" id="togglePassword">
                    <i class="far fa-eye"></i>
                </button>
            </div>
        </div>
        
        <button type="submit" class="btn-login">
            <i class="fas fa-sign-in-alt"></i>
            Sign In
        </button>
    </form>
    
    <div class="footer">
        <a href="{{ base_url }}/">
            <i class="fas fa-arrow-left"></i>
            Back to Website
        </a>
    </div>
</div>

<script>
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('password');
    
    if (togglePassword && passwordInput) {
        togglePassword.addEventListener('click', function() {
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;
            
            const icon = this.querySelector('i');
            if (icon) {
                if (type === 'text') {
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            }
        });
    }
</script>

</body>
</html>