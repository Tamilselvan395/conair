<!DOCTYPE html>
<html>
<head>
    <title>Admin Login</title>
</head>
<body>

<h2>Admin Login</h2>

{% if error %}
<p style="color:red;">{{ error }}</p>
{% endif %}

<form method="POST" action="{{ base_url }}/admin/login">

    <input type="hidden"
           name="{{ csrf.keys.name }}"
           value="{{ attribute(_request.attributes, csrf.keys.name) }}">

    <input type="hidden"
           name="{{ csrf.keys.value }}"
           value="{{ attribute(_request.attributes, csrf.keys.value) }}">

    <input type="text" name="username" required>
    <input type="password" name="password" required>

    <button type="submit">Login</button>
</form>

</body>
</html>
