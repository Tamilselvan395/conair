        margin-bottom: 20px;
        text-transform: uppercase;
        position: relative;
        display: inline-block;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 40px;
        height: 3px;
        background: #393186;
        border-radius: 2px;
        opacity: 0.3;
    }
    
    /* Email List */
